{
  "name": "melsoft-lms-bot-marker",
  "version": "1.0.0",
  "description": "LMS Bot Marker Backend",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
